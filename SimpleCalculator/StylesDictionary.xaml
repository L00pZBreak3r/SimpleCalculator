<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:SimpleCalculator">

  <Style TargetType="{x:Type TextBlock}" x:Key="mNumberDisplayTextBlockStyle">
    <Setter Property="Margin" Value="5, 10, 5, 20" />
    <Setter Property="FontSize" Value="80" />
    <Setter Property="TextAlignment" Value="Right" />
  </Style>

  <Style TargetType="{x:Type TextBlock}" x:Key="mHistoryTitleTextBlockStyle">
    <Setter Property="Margin" Value="4, 10, 0, 0" />
    <Setter Property="FontWeight" Value="Bold" />
  </Style>

  <Style TargetType="{x:Type ListBox}" x:Key="mHistoryListBoxStyle">
    <Setter Property="Margin" Value="4" />
    <Setter Property="Width" Value="300" />
  </Style>

  <Style TargetType="{x:Type Button}" x:Key="mNumberButtonStyle">
    <Setter Property="Margin" Value="5" />
    <Setter Property="FontSize" Value="40" />
  </Style>

</ResourceDictionary>